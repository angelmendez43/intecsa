<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_hoja_servicios">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="data_report_margin_top" t-value="12"/>
                <t t-set="data_report_header_spacing" t-value="4"/>
                <t t-set="o" t-value="o.with_context(lang=user.lang)"/>
                <div class="article">
                    <div class="page">
                        <img src="/intecsa/static/src/img/Globatronics.png" width="200px" height="165" align="left"/>
                        <img src="/intecsa/static/src/img/Hikvision.png" width="200px" height="165" align="right"/>
                        	<table style="width:50%">
                        		<tr>
                        			<th style="text-align:center"><h4><strong><t t-esc="o.company_id.name"/></strong></h4></th>
                        		</tr>
                        		<tr>
                        			<td style="text-align:center"><t t-esc="o.company_id.street"/></td>
                        		</tr>
                        		<tr>
                        			<td style="text-align:center">PBX: <t t-esc="o.company_id.phone"/></td>
                        		</tr>
                        		<tr>
                        			<td style="text-align:center">Correo Electronico: <t t-esc="o.company_id.email"/></td>
                        		</tr>
                        		<tr>
                        			<td style="text-align:center"><t t-esc="o.company_id.website"/></td>
                        		</tr>
                        	</table>
                        <br/>
                        <div class="mid" style="text-align:center">
                        	<strong>REPORTE DE PROYECTO</strong>
                        </div>
                        <div class="der" style="float:right; color:red">
                        	<strong>Nº <t t-esc="o.id"/></strong>
                        </div>
                        <br/>
                        <table style="width: 100%;">
                            <tr>
                                <td style="width: 50%; border-left: 1px solid black; border-top: 1px solid black;">
                                    <h4>PROYECTO:</h4> <t t-esc="o.name"/>
                                </td>
                                <td style="width: 50%; border-top: 1px solid black; border-right: 1px solid black; border-left: 1px solid black;">
                                     <h4>FECHA:</h4> <t t-esc="worksheet.x_fecha"/>
                                </td>
                            </tr>
                            <tr>
                            	<td style="width: 50%; border-left: 1px solid black; border-bottom: 1px solid black;">
                                    <h4>TECNICO ASIGNADO:</h4> <t t-esc="o.user_ids[0].name"/>
                                </td>
                                <td style="width: 50%; border-right: 1px solid black; border-bottom: 1px solid black; border-left: 1px solid black;">
                                     <h4>TIEMPO DE INSTALACION:</h4> <t t-esc="worksheet.x_tiempo_instalacion"/>
                                </td>
                            </tr>
                        </table>
                        <br/>
                        <table style="width: 100%; border: 1px solid black;">
                        	<tr>
                        		<td style="width: 50%;">
                        			<h4>EQUIPO:</h4> <t t-esc="worksheet.x_equipo"/>
                        		</td>
                        		<td style="text-align: left;">
                        			<h4>INSTALACION: <t t-if="worksheet.x_instalacion==True">✓</t></h4>
                        		</td>
                        	</tr>
                        	<tr>
                        		<td/>
                        		<td style="text-align: left;">
                        			<h4>SERVICIO TECNICO: <t t-if="worksheet.x_servicio_tecnico==True">✓</t></h4>
                        		</td>
                        	</tr>
                        </table>
                        <br/>
                        <table style="width: 100%; height: 210px; border: 1px solid black;" border="1px">
                        	<tr>
                        		<td style="width:50%;">
                        			<h4>TRABAJO REALIZADO: </h4><t t-esc="worksheet.x_trabajo_realizado"/>
                        		</td>
                        	</tr>
                        </table>
                        <br/>
                        <table style="width: 100%; height: 185px; border: 1px solid black;" border="1px">
                        	<tr>
                        		<td>
                        			<h4>REPUESTOS UTILIZADOS: </h4><t t-esc="worksheet.x_repuestos_utilizados"/>
                        		</td>
                        	</tr>
                        </table>
                        <br/><br/>
                        <table style="width: 100%; height:10%" border="1px">
                        	<tr>
                        		<td style="width:33.33%; border-bottom: 1px solid black;"><img style="height:100px" t-att-src="'data:image/png;base64,%s' % to_text(worksheet.x_firma_cliente)"/></td>
                        		<td style="width:33.33%; text-align:center;" rowspan="2">
                        			<h6>Miembro Activo</h6><img src="/intecsa/static/src/img/CIG.jpg" width="200px" height="100px" align="center"/></td>
                        		<td style="width:33.33%; border-bottom: 1px solid black;"><img style="height:100px" t-att-src="'data:image/png;base64,%s' % to_text(worksheet.x_firma_tecnico)"/></td>
                        	</tr>
                        	<tr>
                        		<td style="text-align:center"><t t-esc="worksheet.x_nombre_cliente"/><br/>
                        			<h6>NOMBRE Y FIRMA CLIENTE</h6>
                        		</td>
                        		<td style="text-align:center"><t t-esc="worksheet.x_nombre_tecnico"/><br/>
                        			<h6>NOMBRE Y FIRMA TECNICO</h6>
                        		</td>
                        	</tr>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
